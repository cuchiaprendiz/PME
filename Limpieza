##división BD 2017

PME2017_CE <- PME2017 %>%
  filter(dimension1 == "Convivencia Escolar")

PME2017_GR <- PME2017 %>%
  filter(dimension1 == "Gestión de Recursos")

PME2017_GP <- PME2017 %>%
  filter(dimension1 == "Gestión Pedagógica")

PME2017_L <- PME2017 %>%
  filter(dimension1 == "Liderazgo")
